<?xml version="1.0" encoding="utf-8"?>
<com.tech.android.ui.camerakit.view.CameraLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:bankCardExamView="@+id/bank_card_exam_container"
    app:centerView="@+id/take_photo_button"
    app:contentView="@+id/camera_view"
    app:idCardBackExamView="@+id/id_card_back_exam_container"
    app:idCardExamView="@+id/id_card_exam_container"
    app:leftDownView="@+id/album_button"
    app:rightUpView="@+id/light_button">

    <com.tech.android.ui.camerakit.view.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/id_card_exam_container"
        layout="@layout/ck_id_card_example"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone" />

    <include
        android:id="@+id/id_card_back_exam_container"
        layout="@layout/ck_id_card_back_example"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone" />

    <include
        android:id="@+id/bank_card_exam_container"
        layout="@layout/ck_bank_card_example"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/album_button"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:padding="18dp"
        android:src="@drawable/camera_gallery" />


    <ImageView
        android:id="@+id/take_photo_button"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@drawable/ck_sel_take_photo" />


    <ImageView
        android:id="@+id/light_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="18dp"
        android:padding="15dp"
        android:paddingBottom="3dp"
        android:src="@drawable/camera_light_off" />

</com.tech.android.ui.camerakit.view.CameraLayout>
